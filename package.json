{
  "name": "powerplatform-build-tools-extensions",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "description": "Extensions for Azure DevOps tasks for Power Platform",
  "private": true,
  "scripts": {
    "set-env": "export $(cat .env | xargs)",
    "build": "npm run tslint:fix && webpack --config=webpack.config.js",
    "build:package": "npm run build && npm run package",
    "clean": "rimraf ./dist",
    "clean:build": "npm run clean && npm run build",
    "tslint": "tslint --project tsconfig.json --config tslint.json",
    "tslint:fix": "tslint --project tsconfig.json --fix --config tslint.json",
    "package": "npm run set-env && cd dist/$BUILD_ENV && tfx extension create --manifest-globs extension-manifest.json --output-path extension.vsix --publisher $DEV_PUBLISHER && cd ../.."
  },
  "author": "Yannick Reekmans",
  "license": "MIT",
  "devDependencies": {
    "@types/q": "^1.5.8",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "find": "^0.3.0",
    "remove-files-webpack-plugin": "^1.5.0",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "rimraf": "^6.0.1",
    "string-replace-loader": "^3.1.0",
    "style-loader": "^4.0.0",
    "tfx-cli": "^0.22.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "tslint-loader": "3.5.4",
    "typescript": "^5.4.5",
    "webpack": "^5.94.0",
    "webpack-cli": "^6.0."
  },
  "dependencies": {
    "azure-pipelines-task-lib": "^5.2.1"
  },
  "bundleDependencies": [
    "azure-pipelines-task-lib"
  ]
}
